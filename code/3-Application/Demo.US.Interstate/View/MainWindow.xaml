<Window x:Class="SA.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:agnostic="clr-namespace:SA.Agnostic.UI;assembly=Agnostic.UI"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Top="0"
        Height="1024" Width="800"
        Style="{DynamicResource CommonFont}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Agnostic.UI;component/Resources/Agnostic.UI.MenuItem.xaml"/>
                <ResourceDictionary>
                    <system:Double x:Key="FontSize">18</system:Double>
                    <system:Double x:Key="splitterSize">8</system:Double>
                    <Thickness x:Key="horizontalPadding">8 0 8 0</Thickness>
                    <Style x:Key="CommonFont" TargetType="Control">
                        <Setter Property="FontSize" Value="{StaticResource ResourceKey=FontSize}"/>
                    </Style>
                    <Style x:Key="CommonFontMenu" TargetType="Menu">
                        <Setter Property="FontSize" Value="{StaticResource ResourceKey=FontSize}"/>
                    </Style>
                    <Style x:Key="buttonApplication" TargetType="Button">
                        <Setter Property="Padding" Value="{StaticResource horizontalPadding}"/>
                    </Style>
                    <Style TargetType="GridSplitter">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="ResizeDirection" Value="Columns">
                                <Setter Property="Width" Value="{StaticResource splitterSize}"/>
                            </Trigger>
                            <Trigger Property="ResizeDirection" Value="Rows">
                                <Setter Property="Height" Value="{StaticResource splitterSize}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="PaleTurquoise"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <Menu Style="{StaticResource CommonFontMenu}">
                <MenuItem Header="_Files"></MenuItem>
                <MenuItem Header="_View">
                    <MenuItem x:Name="menuItemAllAssociations" Header="Show _All Associations" Icon="👁" IsCheckable="True" />
                </MenuItem>
            </Menu>
        </Border>
        <Border Grid.Row="1">
            <agnostic:GraphPresenter x:Name="graphPresenter"></agnostic:GraphPresenter>
        </Border>
        <GridSplitter Grid.Row="2" ResizeDirection="Rows"/>
        <Border Grid.Row="3" Padding="4">
            <agnostic:FlatObjectEditor x:Name="editor" BorderThickness="1"/>
        </Border>
        <Border Grid.Row="4">
            <StackPanel x:Name="panelFailure" Visibility="Collapsed" Orientation="Vertical">
                <TextBlock x:Name="textBlockError" Foreground="Red"/>
                <Button x:Name="buttonSeeError" Style="{StaticResource buttonApplication}">See Error</Button>
            </StackPanel>
        </Border>
        <Border Grid.Row="5">
            <StatusBar>
                <TextBlock>Status</TextBlock>
                <CheckBox x:Name="checkboxReadonly">Is Readonly</CheckBox>
                <Button x:Name="buttonExamineTarget" Style="{StaticResource buttonApplication}">Examine Target</Button>
                <TextBlock x:Name="textBlockTarget"/>
            </StatusBar>
        </Border>
    </Grid>
</Window>
